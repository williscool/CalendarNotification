<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:installLocation="internalOnly">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.QUICKBOOT_POWERON" />
    <!-- For HTC -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"/>

    <!-- Legacy Bluetooth permission - only needed on API 30 and below -->
    <uses-permission android:name="android.permission.BLUETOOTH" 
        android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- this is also required for BlueTooth - according to google bluetooth device discovery can be used for coarse location -->
    
    <!-- Android 12+ (API 31) - Required for accessing paired Bluetooth devices -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    
    <!-- TODO: figure out how to only enable these for dev build -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Android 12+ (API 31) - Required for exact alarms in calendar/alarm apps (auto-granted) -->
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    
    <!-- Android 13+ (API 33) - Required for posting notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />


    <application
        android:name=".GlobalState"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        android:usesCleartextTraffic="true"
        android:extractNativeLibs="true"
        >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/main_activity_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SettingsActivityX"
            android:label="@string/settings_name"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.ReportABugActivity"
            android:label="@string/help_feedback"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.ViewEventActivityNoRecents"
            android:excludeFromRecents="true"
            android:label="@string/view_event"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.ViewEventActivity"
            android:label="@string/view_event"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"
            />

        <activity
            android:name=".ui.SnoozeAllActivity"
            android:label="@string/snooze_all"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".prefs.CalendarsActivity"
            android:label="@string/title_calendars_activity"
            android:parentActivityName=".ui.SettingsActivityX"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="com.github.quarck.calnotify.prefs.CalendarsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".prefs.CarModeActivity"
            android:label="@string/title_car_mode_activity"
            android:parentActivityName=".ui.SettingsActivityX"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="com.github.quarck.calnotify.prefs.CarModeActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.TestActivity"
            android:label="@string/title_activity_activity_test_buttons_and_to_do"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name=".ui.AboutActivity"
            android:label="@string/menu_about"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.DismissedEventsActivity"
            android:label="@string/dismissed_events"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.PrivacyPolicyActivity"
            android:label="@string/title_activity_privacy_policy"
            android:parentActivityName=".ui.AboutActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.EditEventActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.MainActivity"
            android:label="@string/empty"
            />

        <activity
            android:name=".ui.EditEventActivityTextReceiver"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.MainActivity"
            android:label="@string/create_event"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <activity android:name="com.facebook.react.devsupport.DevSettingsActivity" />

        <activity
            android:name=".ui.MyReactActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.github.quarck.calnotify.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <service android:name=".calendarmonitor.CalendarMonitorService" android:exported="false" />

        <service android:name=".notification.NotificationActionDismissService" android:exported="false" />
        <service android:name=".notification.NotificationActionSnoozeService" android:exported="false" />
        <service android:name=".notification.NotificationActionMuteToggleService" android:exported="false" />

        <receiver 
            android:name=".broadcastreceivers.AppUpdatedBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".broadcastreceivers.BootCompleteBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <!-- Well, HTC -->
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
                <!-- Well, OLD HTC -->
                <action android:name="android.intent.action.REBOOT" />
                <!-- Well, MIUI -->

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <receiver 
            android:name=".broadcastreceivers.EventReminderBroadcastReceiver"
            android:exported="true">
            <intent-filter android:priority="2147483647">
                <action android:name="android.intent.action.EVENT_REMINDER" />

                <data android:mimeType="vnd.android.cursor.item/calendar-alert" />
            </intent-filter>
            <intent-filter android:priority="2147483647">
                <action android:name="android.intent.action.EVENTEX_REMINDER" />

                <data android:mimeType="vnd.android.cursor.item/calendarEx-alert" />
            </intent-filter>
            <intent-filter android:priority="2147483647">
                <action android:name="android.intent.action.EVENT_REMINDER" />

                <data android:scheme="content" />
            </intent-filter>
            <intent-filter android:priority="2147483647">
                <action android:name="android.intent.action.EVENT_REMINDER" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/calendar_alert_time" />
            </intent-filter>
        </receiver>
        <receiver 
            android:name=".broadcastreceivers.CalendarChangedBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PROVIDER_CHANGED" />

                <data android:scheme="content" />
                <data android:host="com.android.calendar" />
            </intent-filter>
        </receiver>
        <receiver android:name=".broadcastreceivers.SnoozeAlarmBroadcastReceiver" android:exported="false" />
        <receiver android:name=".broadcastreceivers.ReminderAlarmBroadcastReceiver" android:exported="false" />
        <receiver android:name=".broadcastreceivers.ManualEventAlarmBroadcastReceiver" android:exported="false" />
        <receiver android:name=".broadcastreceivers.SnoozeExactAlarmBroadcastReceiver" android:exported="false" />
        <receiver android:name=".broadcastreceivers.ReminderExactAlarmBroadcastReceiver" android:exported="false" />
        <receiver android:name=".broadcastreceivers.ManualEventExactAlarmBroadcastReceiver" android:exported="false" />
        <receiver android:name=".broadcastreceivers.ManualEventAlarmPeriodicRescanBroadcastReceiver" android:exported="false" />
        <receiver 
            android:name=".broadcastreceivers.TimeSetBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
            </intent-filter>
        </receiver>
        <receiver 
            android:name=".broadcastreceivers.RemoteCommandBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.github.quarck.calnotify.remote_mute_all" />
            </intent-filter>
        </receiver>

        <receiver 
            android:name=".broadcastreceivers.RescheduleConfirmationsBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.github.quarck.calnotify.RESCHEDULE_CONFIRMATIONS_RECEIVED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
